{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": true,
    "noImplicitAny": false
  },
  "imports": {
    "std/": "https://deno.land/std@0.168.0/",
    "supabase": "https://esm.sh/@supabase/supabase-js@2"
  },
  "tasks": {
    "serve": "deno run --allow-net --allow-env --allow-read --watch index.ts",
    "deploy": "supabase functions deploy"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": false,
      "singleQuote": true
    }
  }
}

